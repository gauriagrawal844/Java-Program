import java.util.Scanner;
class EvenByMethod
{
	static boolean Even(int x)
	{
		boolean b=false;
		if(x%2==0)
		b=true;

		return b;
	}

	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter any number : ");
		int x=sc.nextInt();
		System.out.println(x+" is even : "+Even(x));
	}
}
