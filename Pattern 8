import java.util.Scanner;
class Pattern7
{
	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter no. of columns :");
		int c=sc.nextInt();
		for(int i=1;i<=c;i++)
		{
			for(int j=1;j<=c-i;j++)
					System.out.print(" ");

			for(int k=1;k<=i;k++)
				System.out.print("*");

			for(int j=1;j<=i-1;j++)
				System.out.print("*");

		System.out.println();
		}

	}
}
