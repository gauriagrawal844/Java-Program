import java.util.Scanner;
class Pattern5
{
	public static void main(String args[])
	{

	Scanner sc=new Scanner(System.in);
	System.out.println("Enter no. of Columns  :");
	int c=sc.nextInt();
	for(int i=1;i<=c;i++)
	{
		for(int j=1;j<c+1-i;j++)
		{
			System.out.print(" ");

		}

		for(int k=1;k<=i;k++)
		{
			System.out.print("*");
		}
		System.out.println();
	}
	}

}
